<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %> </h1>

    <form action="/nuevo-grupo" class="default-form" method="POST" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre del grupo">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" name="descripcion" id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoría</label>
            <select name="categoria">
                <option value="" selected disabled>-- Elige una categoría --</option>
                <% categorias.forEach( categoria => { %>
                    <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen" accept="image/*">
        </div>
        <div class="campo">
            <label for="url">Sitio web</label>
            <input type="url" name="url" placeholder="Sitio web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Crear grupo" class="btn btn-rosa">
        </div>
    </form>
</main>