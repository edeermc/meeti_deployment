<main class="contenedor panel-administracion">
    <h1><%= nombrePagina %> </h1>

    <div class="contenedor-botones">
        <a href="/nuevo-grupo" class="btn btn-amarillo">Nuevo grupo</a>
        <a href="/nuevo-meeti" class="btn btn-azul">Nuevo meeti</a>
        <a href="/editar-perfil" class="btn btn-rosa">Editar perfil</a>
        <a href="/cambiar-contrasena" class="btn btn-verde">Cambiar contraseña</a>
        <a href="/imagen-perfil" class="btn btn-amarillo">Imagen de perfil</a>
    </div>

    <div class="seccion-admin">
        <h2>Próximos meeti's</h2>

        <ul>
            <% if (meetis.length) { %>
                <% meetis.forEach( meeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %>
                            <% const fecha = `${meeti.fecha} ${meeti.hora}` %> 
                            <p class="fecha"><%= moment(fecha).format('LLLL') %> horas</p>
                            <a href="/meeti/<%= meeti.slug %>" target="_blank">
                                <h3><%= meeti.titulo %></h3>
                            </a>
                            <small><%= meeti.interesados.length %> Asistentes</small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meeti.id %>" class="btn btn-verde">Editar</a>
                            <a href="/asistentes/<%= meeti.slug %>" class="btn btn-azul2">Ver asistentes</a>
                            <a href="/eliminar-meeti/<%= meeti.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }) %>
            <% } else { %> 
                <p>Aún no hay meeti's proximos</p>
            <% } %>
        </ul>
    </div>

    <div class="seccion-admin">
        <h2>Tus grupos</h2>

        <% if (grupos.length) { %>
            <ul>
                <% grupos.forEach (grupo => { %>
                    <li>
                        <div class="informacion-admin">
                            <h3><%= grupo.nombre %></h3>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-grupo/<%= grupo.id %>" class="btn btn-verde">Editar</a>
                            <a href="/imagen-grupo/<%= grupo.id %>" class="btn btn-azul2">Imagen</a>
                            <a href="/eliminar-grupo/<%= grupo.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No tienes grupos creados</p>
        <% } %> 
    </div>

    <div class="seccion-admin">
        <h2>Meeti's anteriores</h2>

        <ul>
            <% if (oldmeetis.length) { %>
                <% oldmeetis.forEach( meeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <% moment.locale('es') %>
                            <% const fecha = `${meeti.fecha} ${meeti.hora}` %> 
                            <p class="fecha"><%= moment(fecha).format('LLLL') %> horas</p>
                            <h3><%= meeti.titulo %></h3>
                            <small><%= meeti.interesados.length %> Asistentes</small>
                        </div>
                        <div class="acciones contenedor-botones">
                            <a href="/editar-meeti/<%= meeti.id %>" class="btn btn-verde">Editar</a>
                            <a href="/asistentes-meeti/<%= meeti.id %>" class="btn btn-azul2">Ver asistentes</a>
                            <a href="/eliminar-meeti/<%= meeti.id %>" class="btn btn-rojo">Eliminar</a>
                        </div>
                    </li>
                <% }) %>
            <% } else { %> 
                <p>Aún no hay meeti's anteriores</p>
            <% } %>
        </ul>
    </div>
</main>