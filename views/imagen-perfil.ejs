<main class="contenedor contenedor-formularios">
    <h1><%= nombrePagina %> </h1>

    <form class="default-form" method="POST" enctype="multipart/form-data">
        <legend>Sube tu imagen que se mostrará junto a tu nombre y biografía</legend>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen" accept="image/*">
        </div>
        <% if (usuario.imagen) { %>
            <div class="campo">
                <label for="img-actual">Imagen actual</label>
                <img src="/uploads/perfiles/<%= usuario.imagen %>" alt="Imagen actual" width="200">
            </div>
        <% } else { %>
            <p>No hay imagen</p>
        <% } %>
        <div class="campo enviar">
            <input type="submit" value="Subir imagen" class="btn btn-rosa">
        </div>
    </form>
</main>