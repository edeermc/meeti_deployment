<main class="contenedor asistentes">
    <h1><%= nombrePagina %></h1>

    <% if (asistentes.length) { %>
        <ul class="listado-asistentes">
            <% asistentes.forEach( asistente => { %>
                <li>
                    <div class="imagen">
                        <% if (asistente.imagen) { %>
                            <img src="/uploads/perfiles/<%= asistente.imagen %>" alt="<%= asistente.nombre %>">
                        <% } %>
                    </div>
                    <div class="texto">
                        <%= asistente.nombre %>
                    </div>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p class="no-asistentes">No hay asistentes aÃºn para este meeti</p>
    <% } %>
</main>