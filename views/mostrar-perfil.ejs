<main class="asistentes contenedor">
    <h1><%= nombrePagina %></h1>

    <div class="informacion-usuario">
        <div class="imagen">
            <% if (usuario.imagen) { %>
                <img src="/uploads/perfiles/<%= usuario.imagen %>" alt="<%= usuario.nombre %>">
            <% } %>
        </div>

        <div class="texto">
            <%- usuario.descripcion %>
        </div>
    </div>

    <div class="grupos-usuarios">
        <% if (grupos.length) { %>
            <h2>Grupos de <%= usuario.nombre %></h2>

            <ul class="lista-grupos">
                <% grupos.forEach( grupo => { %>
                    <li>
                        <div class="imagen">
                            <% if (grupo.imagen) { %>
                                <img src="/uploads/grupos/<%= grupo.imagen %>" alt="<%= grupo.nombre %>">
                            <% } else { %>
                                <img src="/img/meeti.jpg" alt="<%= grupo.nombre %>">
                            <% } %>
                        </div>

                        <div class="texto">
                            <a href="/grupo/<%= grupo.id %>">
                                <h3><%= grupo.nombre %></h3>
                            </a>
                        </div>
                    </li>
                <% }) %> 
            </ul>
        <% } %>
    </div>
</main>