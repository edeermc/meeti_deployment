<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %> </h1>

    <form class="default-form" method="POST">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" value="<%= grupo.nombre %>" name="nombre" placeholder="Nombre del grupo">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" name="descripcion" id="x" value="<%= grupo.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoría</label>
            <select name="categoria">
                <option value="" disabled>-- Elige una categoría --</option>
                <% categorias.forEach( categoria => { %>
                <option value="<%= categoria.id %>" <% if (categoria.id === grupo.categoriumId) { %> selected <% } %>><%= categoria.nombre %></option>
                <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label for="url">Sitio web</label>
            <input type="url" name="url" placeholder="Sitio web" value="<%= grupo.url %>">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar cambios" class="btn btn-rosa">
        </div>
    </form>
</main>